{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": false, // todo: сконфигурировать типизацию jsx
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["dom", "es2019"],
    "jsx": "preserve",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "createElement",
    "outDir": "./dist/",
    "allowJs": true,
    "skipLibCheck": true,
    "keyofStringsOnly": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "moduleResolution": "Node"
  },
  "types": [
    "chrome"
  ],
  "typeAcquisition": {
    "enable": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src"
  ]
}
